<Window x:Class="InventarioILS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioILS"
        mc:Ignorable="d"
        Title="Inventario Electrónica" Width="1720" Height="1040">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource Background}"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel lateral -->
        <Border Grid.Column="0" Background="{StaticResource Secondary}" BorderBrush="#3FFFEFEF" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,0,0,0">
                <StackPanel.Background>
                    <SolidColorBrush Color="{DynamicResource Background}"/>
                </StackPanel.Background>
                <!-- Tabs -->
                <StackPanel Orientation="Horizontal" Margin="16,16,0,16" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Inventario" Style="{x:Null}" Foreground="White" Background="Transparent" BorderBrush="Transparent" FontWeight="Normal" Padding="8,4"/>
                    <Button Content="Pedidos" Style="{x:Null}" Foreground="#FF232323" Background="#FFEFEFEF" BorderBrush="Transparent" FontWeight="Bold" Padding="24,4" Margin="8,0,0,0"/>
                </StackPanel>
                <!-- Filtros -->
                <StackPanel Margin="16,0,16,0">
                    <StackPanel.Background>
                        <SolidColorBrush Color="{DynamicResource Background}"/>
                    </StackPanel.Background>
                    <TextBlock Text="Código" Margin="0,8,0,0" Foreground="{DynamicResource AccentForegroundBrush}" />
                    <TextBox Margin="0,4,0,8" Height="28" Style="{StaticResource RoundedInput}" Background="#FF232323" BorderThickness="1">
                        <TextBox.BorderBrush>
                            <SolidColorBrush Color="{DynamicResource Accent}"/>
                        </TextBox.BorderBrush>
                    </TextBox>

                    <TextBlock Text="Palabras Clave" Foreground="{DynamicResource AccentForegroundBrush}" />
                    <TextBox Margin="0,4,0,8" Height="28"  Style="{StaticResource RoundedInput}" Background="#FF232323" BorderThickness="1">
                        <TextBox.BorderBrush>
                            <SolidColorBrush Color="#FF9BE8D6"/>
                        </TextBox.BorderBrush>
                    </TextBox>

                    <TextBlock Text="Tipo" Foreground="{DynamicResource AccentForegroundBrush}"/>
                    <ComboBox Margin="0,4,0,8" Height="28" BorderThickness="1">
                        <ComboBox.BorderBrush>
                            <SolidColorBrush Color="#6AC7B2"/>
                        </ComboBox.BorderBrush>
                        <ComboBox.Background>
                            <SolidColorBrush Color="#1D1C1C"/>
                        </ComboBox.Background>
                        <ComboBox.Foreground>
                            <SolidColorBrush Color="{DynamicResource Foreground}"/>
                        </ComboBox.Foreground>
                        <ComboBoxItem Content="Insumo" IsSelected="True"/>
                        <ComboBoxItem Content="Dispositivo"/>
                    </ComboBox>
                    <TextBlock Text="Cantidad" Foreground="{DynamicResource AccentForegroundBrush}" />
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="0" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                        <Slider Minimum="0" Maximum="1000" Width="180" Margin="8,0"/>
                        <TextBlock Text="1000" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                    </StackPanel>
                    <CheckBox Content="Mostrar elementos sin stock" Foreground="White" Margin="0,8,0,0"/>
                </StackPanel>
                <!-- Botones -->
                <StackPanel Margin="16,24,16,0">
                    <Button Height="48" Style="{StaticResource RoundedButton}" FontWeight="Bold" FontSize="18" Margin="0,0,0,8" BorderBrush="Transparent" Click="Button_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="+" FontSize="25" FontWeight="Bold" Margin="0,0,8,4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="Añadir Item" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Secondary}"/>
                        </Button.Foreground>
                        <Button.Background>
                            <SolidColorBrush Color="{DynamicResource Accent}"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="CollapseSidebarBtn" Height="48" Style="{StaticResource RoundedButton}" FontWeight="Bold" FontSize="18" BorderBrush="Transparent" RenderTransformOrigin="0.5,0.5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="←" FontSize="40" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="Colapsar" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button.Background>
                            <SolidColorBrush Color="#FF9BE8D6"/>
                        </Button.Background>
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Secondary}"/>
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Tabla de datos -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource Background}"/>
            </Grid.Background>
            <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False" Foreground="black" RowBackground="#FF232323"
                      AlternatingRowBackground="#FF232323" GridLinesVisibility="None" Margin="0,0,0,0"
                      ColumnHeaderHeight="40" RowHeight="40" FontSize="16" SelectionChanged="DataGrid_SelectionChanged">
                <DataGrid.Background>
                    <SolidColorBrush Color="{DynamicResource Secondary}"/>
                </DataGrid.Background>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código" Binding="{Binding ProductCode}" FontWeight="Bold" Width="120"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Type}" Width="120"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding State}" Width="120"/>
                    <DataGridTextColumn Header="Cant." Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Ubicación" Binding="{Binding Location}" Width="160"/>
                    <DataGridTextColumn Header="Notas" Binding="{Binding AdditionalNotes}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
