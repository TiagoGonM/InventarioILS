<UserControl x:Class="InventarioILS.View.UserControls.OrderCard"
             x:Name="orderCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioILS.View.UserControls"
             mc:Ignorable="d" d:DesignHeight="130" d:DesignWidth="663">

    <UserControl.Resources>
        <!-- Small pill button used in cards -->
        <Style x:Key="CardButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="4" Padding="10" Height="100" BorderBrush="#111" BorderThickness="1" Width="Auto" Margin="0,15,0,15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="TitleLabel" 
                               Text="{Binding Title, ElementName=orderCard, FallbackValue=Pedido #N}" 
                               FontWeight="Bold" FontSize="16" Foreground="White"/>
                    <TextBlock x:Name="CreationDateLabel" 
                               Text="{Binding CreationDate, ElementName=orderCard, StringFormat=dd/MM/yyyy, FallbackValue=--/--/----}" 
                               Foreground="#A1A1A1" FontSize="12" VerticalAlignment="Center" Margin="5,0"/>
                </StackPanel>
                <TextBlock x:Name="DescriptionLabel" 
                           Text="{Binding Description, ElementName=orderCard, FallbackValue=descripcion}" 
                           Foreground="#BFBFBF" TextWrapping="Wrap"/>
            </StackPanel>
            <Button Grid.Column="1" Style="{StaticResource CardButton}" VerticalAlignment="Center" Margin="10" HorizontalAlignment="Center" Width="72" Content="Ver"/>
        </Grid>
    </Border>
</UserControl>
