<Window x:Class="InventarioILS.View.UserControls.OrderConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioILS.View.UserControls"
        mc:Ignorable="d"
        Title="Confirmar elementos" Width="1000" Height="700"
        Background="{StaticResource BackgroundBrush}" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="LabelSmall" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,6,0,4"/>
        </Style>

        <Style x:Key="SquareCircleButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="28" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
        </Style>

        <Style x:Key="ArrowCircleButton" TargetType="Button" BasedOn="{StaticResource SquareCircleButton}">
            <Setter Property="CornerRadius" Value="28"/>
        </Style>

        <!-- Reusar estilos definidos en App.xaml -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#232323"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra superior con línea turquesa -->
        <Border Grid.Row="0" BorderBrush="{StaticResource AccentBrush}" BorderThickness="0,3,0,0" Padding="6" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Confirmar elementos" Foreground="{StaticResource ForegroundBrush}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                <Button Grid.Column="1" Content="✕" Width="28" Height="28" Background="Transparent" BorderBrush="Transparent" Foreground="{StaticResource ForegroundBrush}"
                        Click="Close_Click" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Código (izq) y paginador (derecha) -->
        <Grid Grid.Row="1" Margin="8,0,8,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding OrderCode, StringFormat='Código: {0}'}" Foreground="{StaticResource ForegroundBrush}" FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="{Binding PageIndicator}" Foreground="{StaticResource ForegroundBrush}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Contenido principal: dos columnas -->
        <Grid Grid.Row="2" Margin="16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.48*"/>
                <ColumnDefinition Width="0.04*"/>
                <ColumnDefinition Width="0.48*"/>
            </Grid.ColumnDefinitions>

            <!-- Columna izquierda: inputs -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <TextBlock Style="{StaticResource LabelSmall}" Text="Cantidad"/>
                <TextBox x:Name="CantidadTextBox"
                         Text="{Binding QuantityText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="36"
                         Style="{StaticResource RoundedInput}"
                         BorderBrush="{StaticResource AccentBrush}"
                         PreviewTextInput="CantidadTextBox_PreviewTextInput"
                         VerticalContentAlignment="Center"
                         Padding="8"/>

                <TextBlock Style="{StaticResource LabelSmall}" Text="Estado"/>
                <ComboBox ItemsSource="{Binding States}" SelectedItem="{Binding SelectedState, Mode=TwoWay}"
                          Height="36" Style="{StaticResource BlackComboBox}" BorderBrush="{StaticResource AccentBrush}" Margin="0,0,0,6"/>

                <TextBlock Style="{StaticResource LabelSmall}" Text="Ubicación"/>
                <TextBox Text="{Binding Location, Mode=TwoWay}" Height="36" Style="{StaticResource RoundedInput}" BorderBrush="{StaticResource AccentBrush}" Padding="8"/>

                <TextBlock Style="{StaticResource LabelSmall}" Text="Notas" Margin="0,12,0,0"/>
                <TextBox Text="{Binding Notes, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" Height="120"
                         Style="{StaticResource RoundedInput}" BorderBrush="{StaticResource AccentBrush}" Padding="8"/>
            </StackPanel>

            <!-- espacio central -->
            <Grid Grid.Column="1"/>

            <!-- Columna derecha: descripción grande -->
            <StackPanel Grid.Column="2">
                <TextBlock Style="{StaticResource LabelSmall}" Text="Descripción" HorizontalAlignment="Left"/>
                <TextBox Text="{Binding Description, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap"
                         Height="420" Style="{StaticResource RoundedInput}" BorderBrush="{StaticResource AccentBrush}" Padding="12" Background="#222" Foreground="#E6E6E6"/>
            </StackPanel>
        </Grid>

        <!-- Botones inferiores: Prev - Confirm - Next -->
        <Grid Grid.Row="3" Margin="0,18,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource ArrowCircleButton}" Width="56" Height="56" HorizontalAlignment="Left" Margin="18,0"
                    Click="PrevPage_Click">←</Button>

            <Button Grid.Column="1" Style="{StaticResource RoundedButton}" Width="220" Height="56" HorizontalAlignment="Center" Background="{StaticResource AccentBrush}"
                    Foreground="{StaticResource SecondaryBrush}" Click="Confirmar_Click">Confirmar Recibidos</Button>

            <Button Grid.Column="2" Style="{StaticResource ArrowCircleButton}" Width="56" Height="56" HorizontalAlignment="Right" Margin="0,0,18,0"
                    Click="NextPage_Click">→</Button>
        </Grid>
    </Grid>
</Window>