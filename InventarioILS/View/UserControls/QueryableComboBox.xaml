                <UserControl x:Class="InventarioILS.View.UserControls.QueryableComboBox"
             x:Name="queryableComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioILS.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="64.561" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="TitleLabel" Text="{Binding Title, ElementName=queryableComboBox}" Foreground="{StaticResource AccentForegroundBrush}"/>
            <ComboBox x:Name="ComboBox" 
                      Margin="0,4,0,8" 
                      Height="28" 
                      Style="{StaticResource BlackComboBox}" 
                      Foreground="{StaticResource ForegroundBrush}" 
                      BorderThickness="1" 
                      Background="{StaticResource SecondaryBrush}"
                      ItemsSource="{Binding ItemsSource, ElementName=queryableComboBox}"
                      SelectedItem="{Binding SelectedItem, ElementName=queryableComboBox, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" Tag="{Binding Id}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
        </StackPanel>
    </Grid>
</UserControl>
