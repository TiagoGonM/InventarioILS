<UserControl x:Class="InventarioILS.View.UserControls.QueryableComboBox"
            x:Name="queryableComboBox"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:InventarioILS.View.UserControls"
            mc:Ignorable="d"
            d:DesignHeight="64" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="TitleLabel" Visibility="Collapsed" d:Visibility="Visible" Background="Transparent" Text="{Binding Title, ElementName=queryableComboBox}" Foreground="{StaticResource AccentForegroundBrush}"/>
            <ComboBox x:Name="ComboBox"
                        Margin="0,4,0,8" 
                        Height="28"
                        Style="{StaticResource BlackComboBox}" 
                        Foreground="{StaticResource ForegroundBrush}"
                        Background="{StaticResource BackgroundBrush}"
                        BorderThickness="1" 
                        IsReadOnly="True"
                        IsEnabledChanged="ComboBox_IsEnabledChanged"
                        ItemsSource="{Binding ItemsSource, ElementName=queryableComboBox, Mode=OneWay}"
                        SelectedItem="{Binding SelectedItem, ElementName=queryableComboBox, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid x:Name="MasterGrid">
                            <Grid x:Name="DropdownLayout">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="ShorthandText" Text="{Binding Shorthand}" FontSize="10" Grid.Row="0" Foreground="Gray" HorizontalAlignment="Left">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Shorthand.Length}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Shorthand}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding Name}" Grid.Column="0" Grid.Row="1" Tag="{Binding Id}" HorizontalAlignment="Left"/>

                                <Button x:Name="DeleteItem" Grid.Column="1" FontSize="11" Grid.RowSpan="2" Content="X" FontWeight="Bold" 
                        Style="{StaticResource RoundedButtonHighlightTextSecondary}" Height="18" Width="18" 
                        VerticalAlignment="Center" Click="RemoveBtn_Click"/>
                            </Grid> 

                            <StackPanel x:Name="SelectedLayout" Orientation="Horizontal" Visibility="Collapsed" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Shorthand}" 
                                   FontSize="12" 
                                   Foreground="Gray" 
                                   VerticalAlignment="Center" 
                                   Margin="5,1,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Shorthand.Length}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Shorthand}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}}" Value="{x:Null}">
                                <Setter TargetName="DropdownLayout" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="SelectedLayout" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
