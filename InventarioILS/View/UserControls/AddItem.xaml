<UserControl x:Class="InventarioILS.View.UserControls.AddItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioILS.View.UserControls"
             mc:Ignorable="d" d:DesignWidth="1500" Height="263">

    <Border BorderBrush="White" Grid.ColumnSpan="2" BorderThickness="1" Padding="0,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="10,2">
                    <TextBlock Text="Código" Grid.Column="0" VerticalAlignment="Center" Foreground="{StaticResource AccentForegroundBrush}"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                        <TextBlock x:Name="CodeCategoryShorthand" Foreground="{StaticResource ForegroundBrush}"/>
                        <TextBlock x:Name="CodeSeparator" Text="-" Foreground="{StaticResource ForegroundBrush}"/>
                        <TextBlock x:Name="CodeMain" Foreground="{StaticResource ForegroundBrush}"/>
                        <TextBlock x:Name="CodeUnit" Foreground="{StaticResource ForegroundBrush}"/>
                    </StackPanel>
                </StackPanel>
                <WrapPanel HorizontalAlignment="Center">
                    <local:QueryableComboBox Title="Categoría" MinWidth="170" Margin="10,0" ItemsSource="{Binding CategoryList, Mode=OneWay}" SelectedItemChanged="CategoryComboBox_SelectedItemChanged" />
                    <local:QueryableComboBox Title="Subcategoría" MinWidth="170" Margin="10,0" ItemsSource="{Binding SubcategoryList, Mode=OneWay}" SelectedItemChanged="SubcategoryComboBox_SelectedItemChanged" />
                    <local:QueryableComboBox Title="Tipo" MinWidth="170" Margin="10,0" ItemsSource="{Binding ClassList, Mode=OneWay}" SelectedItemChanged="ClassComboBox_SelectedItemChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <CheckBox x:Name="ExtraValueCheckBox" VerticalAlignment="Bottom" Margin="0,0,5,13" Checked="ExtraValueCheckBox_Checked" Unchecked="ExtraValueCheckBox_Unchecked" Foreground="{StaticResource AccentForegroundBrush}"/>
                        <StackPanel>
                            <TextBlock Text="Modelo/valor" Foreground="{StaticResource AccentForegroundBrush}"/>
                            <TextBox x:Name="ExtraValueInput" MaxLength="12" IsEnabled="False" Margin="0,4,0,8" MinHeight="28" MinWidth="150" TextChanged="ExtraValueInput_TextChanged" Style="{StaticResource RoundedInput}" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Foreground="{StaticResource ForegroundBrush}" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1" Margin="16,0,16,0" HorizontalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <local:QueryableComboBox Title="Estado" MinWidth="170" ItemsSource="{Binding StateList, Mode=OneWay}" SelectedItemChanged="StateComboBox_SelectedItemChanged"/>
                    <StackPanel Margin="15,0,15,0">
                        <TextBlock Text="Cantidad" Foreground="{StaticResource AccentForegroundBrush}"/>
                        <local:DigitTextBox x:Name="QuantityInput" MinWidth="100" Margin="0,4,0,8" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Ubicación" Foreground="{StaticResource AccentForegroundBrush}"/>
                        <TextBox x:Name="LocationInput" Margin="0,4,0,8" MinHeight="28" MinWidth="150" Style="{StaticResource RoundedInput}" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Foreground="{StaticResource ForegroundBrush}" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Descripción" Margin="0,8,0,0" Foreground="{StaticResource AccentForegroundBrush}"/>
                <TextBox x:Name="DescriptionInput" Margin="0,4,0,8" MinHeight="28" MinWidth="600" Style="{StaticResource RoundedInput}" TextWrapping="Wrap" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Foreground="{StaticResource ForegroundBrush}" FontWeight="Bold"/>

                <TextBlock Text="Notas" Margin="0,8,0,0" Foreground="{StaticResource AccentForegroundBrush}"/>
                <TextBox x:Name="NotesInput" Margin="0,4,0,8" MinHeight="28" MinWidth="600" Style="{StaticResource RoundedInput}" TextWrapping="Wrap" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Foreground="{StaticResource ForegroundBrush}" FontWeight="Bold"/>

                <Button x:Name="ConfirmButton" Content="Agregar elemento" Margin="0,16,0,0" Height="32" Width="150" HorizontalAlignment="Center" Style="{StaticResource RoundedButtonPrimary}" Click="ConfirmButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
