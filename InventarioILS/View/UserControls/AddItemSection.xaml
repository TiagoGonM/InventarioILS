<UserControl x:Class="InventarioILS.View.UserControls.AddItemSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioILS.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="16,0,16,0">
            <TextBlock Text="Código" Margin="0,8,0,0" Foreground="{StaticResource AccentForegroundBrush}"/>
            <TextBox x:Name="ProductCodeInput" Margin="0,4,0,8" Height="28" Style="{StaticResource RoundedInput}" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Foreground="{StaticResource ForegroundBrush}" FontWeight="Bold"/>

            <TextBlock Text="Categoría" Foreground="{StaticResource AccentForegroundBrush}"/>
            <ComboBox x:Name="CategoryComboBox" Margin="0,4,0,8" Height="28" Style="{StaticResource BlackComboBox}" Foreground="{StaticResource ForegroundBrush}" BorderThickness="1" IsReadOnly="True" Background="{StaticResource BackgroundBrush}">
                <ComboBoxItem Content="Resistencia" Foreground="{StaticResource ForegroundBrush}"/>
                <ComboBoxItem Content="Capacitor" Foreground="{StaticResource ForegroundBrush}"/>
            </ComboBox>

            <TextBlock Text="Subcategoría" Foreground="{StaticResource AccentForegroundBrush}"/>
            <ComboBox x:Name="SubcategoryComboBox" Margin="0,4,0,8" Height="28" Style="{StaticResource BlackComboBox}" Foreground="{StaticResource ForegroundBrush}" BorderThickness="1" IsReadOnly="True" Background="{StaticResource BackgroundBrush}">
                <ComboBoxItem Content="Resistencia" Foreground="{StaticResource ForegroundBrush}"/>
                <ComboBoxItem Content="Capacitor" Foreground="{StaticResource ForegroundBrush}"/>
            </ComboBox>

            <TextBlock Text="Tipo" Foreground="{StaticResource AccentForegroundBrush}"/>
            <ComboBox x:Name="ClassComboBox" Margin="0,4,0,8" Height="28" Style="{StaticResource BlackComboBox}" Foreground="{StaticResource ForegroundBrush}" BorderThickness="1" IsReadOnly="True" Background="{StaticResource BackgroundBrush}" SelectionChanged="ClassComboBox_SelectionChanged">
                <ComboBoxItem Content="Insumo" Foreground="{StaticResource ForegroundBrush}"/>
                <ComboBoxItem Content="Dispositivo" Foreground="{StaticResource ForegroundBrush}"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="16,0,16,0">
            <TextBlock Text="Descripción" Margin="0,8,0,0" Foreground="{StaticResource AccentForegroundBrush}"/>
            <TextBox x:Name="DescriptionInput" Margin="0,4,0,8" MinHeight="28" Style="{StaticResource RoundedInput}" TextWrapping="Wrap" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Foreground="{StaticResource ForegroundBrush}" FontWeight="Bold"/>

            <TextBlock Text="Notas" Margin="0,8,0,0" Foreground="{StaticResource AccentForegroundBrush}"/>
            <TextBox x:Name="NotesInput" Margin="0,4,0,8" MinHeight="28" Style="{StaticResource RoundedInput}" TextWrapping="Wrap" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Foreground="{StaticResource ForegroundBrush}" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
