<UserControl x:Class="InventarioILS.View.UserControls.ImportWizard.SetRelations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioILS.View.UserControls.ImportWizard"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button x:Name="LinkBtn" Content="🔗" Width="40" Height="40" FontSize="20" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource RoundedButtonHighlightTextSecondary}" Click="LinkBtn_Click"/>

        <Grid VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Categorías" Grid.Row="0" FontWeight="Bold" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
            <ListBox x:Name="CategoryListBox"
                 Grid.Row="1"
                 Grid.IsSharedSizeScope="True"
                 SelectionMode="Extended"
                 Padding="2"
                 MinWidth="100"
                 MaxHeight="100"
                 ItemsSource="{Binding CategoryList}"
                 Background="{StaticResource SecondaryBrush}"
                 Foreground="{StaticResource ForegroundBrush}">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" SharedSizeGroup="NameColumn"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ShorthandColumn"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}" Margin="0,0,10,0" Grid.Column="0"/>
                            <TextBlock Text="{Binding Shorthand}" Grid.Column="1" Foreground="{StaticResource AccentForegroundBrush}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Subcategorías" Grid.Row="0" FontWeight="Bold" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>

            <ListBox 
            x:Name="SubcategoryListBox"
            Grid.Row="1"
            Grid.IsSharedSizeScope="True"
            SelectionMode="Extended"
            Padding="2"
            MaxWidth="350"
            MaxHeight="250"
            ItemsSource="{Binding SubcategoryList}"
            Background="{StaticResource SecondaryBrush}"
            Foreground="{StaticResource ForegroundBrush}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" SharedSizeGroup="NameColumn"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ShorthandColumn"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}" Margin="0,0,10,0" Grid.Column="0"/>
                            <TextBlock Text="{Binding Shorthand}" Grid.Column="1" Foreground="{StaticResource AccentForegroundBrush}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
