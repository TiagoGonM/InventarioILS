<UserControl x:Class="InventarioILS.View.UserControls.InventoryDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioILS.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource BackgroundBrush}">
        <DataGrid x:Name="ItemView" CanUserAddRows="False" CanUserDeleteRows="False" RowBackground="#FF232323"
          AlternatingRowBackground="#FF232323" GridLinesVisibility="None" Margin="0,0,0,0"
          ColumnHeaderHeight="40" RowHeight="40" FontSize="16" HorizontalAlignment="Center" HeadersVisibility="Column" AutoGenerateColumns="False" Background="{DynamicResource BackgroundBrush}" Loaded="ItemView_Loaded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Binding="{Binding ProductCode}" FontWeight="Bold" Width="120" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" Width="*" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Class}" Width="120" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding State}" Width="120" Foreground="{StaticResource ForegroundBrush}"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Quantity}" Width="40" Foreground="{StaticResource ForegroundBrush}"/>
                <DataGridTextColumn Header="Ubicación" Binding="{Binding Location}" Width="160" Foreground="{StaticResource ForegroundBrush}"/>
                <DataGridTextColumn Header="Notas" Binding="{Binding AdditionalNotes}" Width="80" Foreground="{StaticResource ForegroundBrush}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
