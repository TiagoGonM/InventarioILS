<UserControl x:Class="InventarioILS.View.UserControls.Panels.SettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioILS.View.UserControls.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Button x:Name="ImportDataBtn" Content="Importar datos desde CSV" MinHeight="35" MinWidth="170" FontWeight="Bold" Foreground="{StaticResource BackgroundBrush}" HorizontalAlignment="Left" Click="ImportDataBtn_Click" Margin="5" Style="{StaticResource RoundedButtonPrimary}" />

            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="Crear categoría" Margin="5,0" Style="{StaticResource RoundedButtonPrimary}" Foreground="{StaticResource BackgroundBrush}" MinHeight="35" FontWeight="Bold" MinWidth="100" Click="CreateCategory_Click"/>
                <Button Content="Crear subcategoría" Margin="5,0" Style="{StaticResource RoundedButtonPrimary}" Foreground="{StaticResource BackgroundBrush}" MinHeight="35" FontWeight="Bold" MinWidth="120" Click="CreateSubcategory_Click"/>
                <Button Content="Crear clase/tipo" Margin="5,0" Style="{StaticResource RoundedButtonPrimary}" Foreground="{StaticResource BackgroundBrush}" MinHeight="35" FontWeight="Bold" MinWidth="100" Click="CreateClass_Click"/>
                <Button Content="Crear estado de item" Margin="5,0" Style="{StaticResource RoundedButtonPrimary}" Foreground="{StaticResource BackgroundBrush}" MinHeight="35" FontWeight="Bold" MinWidth="130" Click="CreateState_Click"/>
                <Button Content="Crear estado de envío" Margin="5,0" Style="{StaticResource RoundedButtonPrimary}" Foreground="{StaticResource BackgroundBrush}" MinHeight="35" FontWeight="Bold" MinWidth="140" Click="CreateShipmentState_Click"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
