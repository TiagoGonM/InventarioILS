<UserControl x:Class="InventarioILS.View.UserControls.OrderConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioILS.View.UserControls"
        mc:Ignorable="d"
        d:Height="600" d:Width="800"
        Background="{StaticResource BackgroundBrush}">
    <UserControl.Resources>
        <Style x:Key="LabelSmall" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,6,0,4"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra superior con línea turquesa -->
        <Border Grid.Row="0" BorderBrush="{StaticResource AccentBrush}" BorderThickness="0,3,0,0" Padding="6" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Confirmar elementos" Foreground="{StaticResource ForegroundBrush}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Código (izq) y paginador (derecha) -->
        <Grid Grid.Row="1" Margin="8,0,8,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding OrderCode, StringFormat='Código: {0}'}" Foreground="{StaticResource ForegroundBrush}" FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="{Binding PageIndicator}" Foreground="{StaticResource ForegroundBrush}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Contenido principal: dos columnas -->
        <Grid Grid.Row="2" Margin="16,0,16,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Columna izquierda: inputs -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <TextBlock Style="{StaticResource LabelSmall}" Text="Cantidad"/>
                <TextBox x:Name="CantidadTextBox"
                         Text="{Binding QuantityText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="28"
                         Style="{StaticResource RoundedInput}"
                         BorderBrush="{StaticResource AccentBrush}"
                         Background="{StaticResource SecondaryBrush}"
                         Foreground="{StaticResource ForegroundBrush}"
                         PreviewTextInput="CantidadTextBox_PreviewTextInput"
                         VerticalContentAlignment="Center"
                         Padding="8"/>

                <local:QueryableComboBox Title="Estado" ItemsSource="{Binding States}" SelectedItem="{Binding SelectedState, Mode=TwoWay}"
                                         BorderBrush="{StaticResource AccentBrush}" Margin="0,8,0,0"/>

                <TextBlock Style="{StaticResource LabelSmall}" Text="Ubicación"/>
                <TextBox Text="{Binding Location, Mode=TwoWay}" Height="28" Style="{StaticResource RoundedInput}" BorderBrush="{StaticResource AccentBrush}" 
                         Background="{StaticResource SecondaryBrush}" Foreground="{StaticResource ForegroundBrush}" Padding="8"/>

                <TextBlock Style="{StaticResource LabelSmall}" Text="Notas" Margin="0,12,0,0"/>
                <TextBox Text="{Binding Notes, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="48"
                         Style="{StaticResource RoundedInput}" BorderBrush="{StaticResource AccentBrush}" Padding="8"
                         Background="{StaticResource SecondaryBrush}" Foreground="{StaticResource ForegroundBrush}"/>
            </StackPanel>

            <!-- espacio central -->
            <Grid Grid.Column="1"/>

            <!-- Columna derecha: descripción grande -->
            <StackPanel Grid.Column="2">
                <TextBlock Style="{StaticResource LabelSmall}" Text="Descripción" HorizontalAlignment="Left"/>
                <TextBox Text="{Binding Description, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap"
                         MinHeight="48" Style="{StaticResource RoundedInput}" BorderBrush="{StaticResource AccentBrush}" Padding="12" 
                         Background="{StaticResource SecondaryBrush}" Foreground="{StaticResource ForegroundBrush}"/>
            </StackPanel>
        </Grid>

        <!-- Botones inferiores: Prev - Confirm - Next -->
        <Grid Grid.Row="4" Margin="18,18,18,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource RoundedButtonSecondary}" Width="56" Height="56" HorizontalAlignment="Left"
                    Click="PrevPage_Click">
                <TextBlock Text="←" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            </Button>

            <Button Grid.Column="1" Style="{StaticResource RoundedButtonPrimary}" Width="220" Height="56" HorizontalAlignment="Center" Background="{StaticResource AccentBrush}"
                    Foreground="{StaticResource SecondaryBrush}" FontWeight="Bold" Click="Confirmar_Click">Confirmar Recibidos</Button>

            <Button Grid.Column="2" Style="{StaticResource RoundedButtonSecondary}" Width="56" Height="56" HorizontalAlignment="Right"
                    Click="NextPage_Click">
                <TextBlock Text="→" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
