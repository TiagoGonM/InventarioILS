<UserControl x:Class="InventarioILS.View.UserControls.AddItemPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioILS.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1600">
    
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Grid.Column="1" Grid.Row="0" Text="Agregar elementos" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Text="{Binding Count, FallbackValue=0}" Margin="5,0" FontSize="15" Foreground="{StaticResource ForegroundBrush}" VerticalAlignment="Center"/>
            </WrapPanel>
            <Button x:Name="ConfirmBtn" Click="ConfirmBtn_Click" Content="Confirmar" Height="28" Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource RoundedButtonPrimary}"/>

            <local:AddItemForm x:Name="AddItemForm" OnConfirm="AddItem_OnConfirm" Grid.Row="1"/>

            <ScrollViewer x:Name="ItemListView" Visibility="Collapsed" Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <!--<local:AddItem Grid.Row="1" OnConfirm="AddItem_OnConfirm" OnEdit="AddItem_OnEdit" OnDelete="AddItem_OnDelete" HorizontalAlignment="Stretch"/>-->
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding ItemList, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:ItemCard ProductCode="{Binding ProductCode}" Margin="5,0"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button x:Name="AddNewItem" Click="AddNewItem_Click" Content="Agregar nuevo" Style="{StaticResource RoundedButtonPrimary}" Height="40" Width="200" FontWeight="Bold"/>
                </StackPanel>
            </ScrollViewer>
    </Grid>
</UserControl>