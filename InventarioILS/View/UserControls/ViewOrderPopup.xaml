<Window x:Class="InventarioILS.View.UserControls.ViewOrderPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioILS.View.UserControls"
        mc:Ignorable="d"
        Width="1128" Height="700"
        Background="{StaticResource BackgroundBrush}">

    <StackPanel Margin="12">
        <!--<.RowDefinitions>
            <RowDefinition Height="Auto"/>  --><!-- barra superior --><!--
            <RowDefinition Height="Auto"/>  --><!-- descripción --><!--
            <RowDefinition Height="*"/>     --><!-- datagrid --><!--
            <RowDefinition Height="Auto"/>  --><!-- botón confirmar --><!--
        </.RowDefinitions>-->

        <!-- Barra superior con línea turquesa -->
        <Border Grid.Row="0" BorderBrush="{StaticResource AccentBrush}" BorderThickness="0,3,0,0" Padding="6" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding OrderCreationDate, StringFormat=dd/MM/yyyy, FallbackValue=--/--/----}" Foreground="#E6E6E6" VerticalAlignment="Center" Margin="8,0"/>
                <TextBlock Grid.Column="1" Text="{Binding OrderName, Mode=OneWay, FallbackValue=Pedido #N}" Foreground="#E6E6E6" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Column="2" Content="✕" Width="28" Height="28" Style="{StaticResource RoundedButton}" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Descripción -->
        <StackPanel Grid.Row="1" Margin="16,0,16,12">
            <TextBlock Text="Descripción" Margin="0,0,0,4" Foreground="{StaticResource AccentForegroundBrush}"/>
            <TextBox x:Name="DescriptionInput" Text="{Binding OrderDescription, Mode=OneWay}" Margin="0,4,0,8" MinHeight="28" Style="{StaticResource RoundedInput}" TextWrapping="Wrap" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Foreground="{StaticResource ForegroundBrush}"/>
        </StackPanel>

        <!-- DataGrid dentro de borde turquesa -->
        <Border Grid.Row="2" BorderBrush="{StaticResource AccentBrush}" BorderThickness="0" Margin="16,0" Background="{StaticResource SecondaryBrush}">
            <DataGrid x:Name="ItemView" CanUserAddRows="False" CanUserDeleteRows="False" RowBackground="#FF232323" MinHeight="450"
                      AlternatingRowBackground="#FF232323" BorderBrush="{StaticResource SecondaryBrush}" GridLinesVisibility="None" Margin="0,0,0,0" ColumnHeaderHeight="40" 
                      RowHeight="40" FontSize="16" HorizontalAlignment="Center" HeadersVisibility="Column" AutoGenerateColumns="False" Background="{DynamicResource BackgroundBrush}"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}" RowStyle="{StaticResource DataGridRowStyle}" ItemsSource="{Binding Items}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código" Binding="{Binding ProductCode}" FontWeight="Bold" MinWidth="100" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" Width="*" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Class}" MinWidth="120" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Envio" Binding="{Binding ShipmentState}" MinWidth="120" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Quantity}" MinWidth="70" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridCheckBoxColumn Header="Recibido" Binding="{Binding IsReceived, Mode=TwoWay}" MinWidth="90"/>
                </DataGrid.Columns>
                </DataGrid>
        </Border>

        <!-- Botón confirmar centrado -->
            <Button Grid.Row="3" Style="{StaticResource RoundedButton}" Background="{StaticResource AccentBrush}" Margin="0,10,0,0" MaxWidth="150" MinHeight="40" Padding="2" Content="Confirmar Recibidos"/>
    </StackPanel>
</Window>
