<Window x:Class="InventarioILS.View.Windows.NewSubcategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioILS.View.Windows"
        mc:Ignorable="d"
        Background="{StaticResource BackgroundBrush}"
        Title="Nueva subcategoría" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" Orientation="Horizontal">
            <StackPanel Margin="10,0,20,0">
                <TextBlock Text="Nombre de la subcategoría" Foreground="{StaticResource AccentForegroundBrush}"/>
                <TextBox x:Name="SubcategoryNameInput" Margin="0,4,0,8" MinWidth="200" MinHeight="28" Style="{StaticResource RoundedInput}" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource AccentBrush}" Foreground="{StaticResource ForegroundBrush}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Abreviatura" Foreground="{StaticResource AccentForegroundBrush}"/>
                <TextBox x:Name="SubcategoryShorthandInput" Margin="0,4,0,8" MaxLength="4" MinWidth="100" MinHeight="28" Style="{StaticResource RoundedInput}" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource AccentBrush}" Foreground="{StaticResource ForegroundBrush}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
