<Window x:Class="InventarioILS.View.Windows.ViewOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioILS.View.Windows"
        xmlns:userControls="clr-namespace:InventarioILS.View.UserControls"
        mc:Ignorable="d"
        Width="1200" Height="750"
        Background="{StaticResource BackgroundBrush}"
        Title="{Binding OrderName, Mode=OneWay, FallbackValue=Pedido}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Stretch" Margin="10, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding OrderName, Mode=OneWay, FallbackValue=Pedido #N}" Foreground="#E6E6E6" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="{Binding OrderCreationDate, StringFormat=dd/MM/yyyy, FallbackValue=--/--/----}" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0"/>
        </Grid>

        <Grid Grid.Row="1" Margin="16,0,16,12" Background="{StaticResource SecondaryBrush}">
            <StackPanel Margin="5" Grid.Row="1">
                <TextBlock Text="Descripción" Margin="0,0,0,4" Foreground="{StaticResource AccentForegroundBrush}"/>
                <TextBlock Text="{Binding OrderDescription, Mode=OneWay, FallbackValue=test}" Foreground="{StaticResource ForegroundBrush}"/>
            </StackPanel>
            
        </Grid>

        <Border Grid.Row="2" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" CornerRadius="5" Margin="16,0">
            <DataGrid x:Name="ItemView" CanUserAddRows="False" CanUserDeleteRows="False" RowBackground="{StaticResource RowBackgroundBrush}" MinHeight="450"
                      AlternatingRowBackground="{StaticResource AlternatingRowBackgroundBrush}" BorderBrush="Transparent" BorderThickness="1" GridLinesVisibility="None" Margin="0,0,0,0" ColumnHeaderHeight="40" 
                      RowHeight="40" FontSize="16" HorizontalAlignment="Center" HeadersVisibility="Column" ColumnWidth="*" AutoGenerateColumns="False" Background="{DynamicResource BackgroundBrush}"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}" RowStyle="{StaticResource DataGridRowStyle}" ItemsSource="{Binding Items}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código" Binding="{Binding ProductCode}" FontWeight="Bold" MinWidth="30" Width="100" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" Width="*" MinWidth="30" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Class}" MinWidth="30" Width="120" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Envio" Binding="{Binding ShipmentState}" MinWidth="30" Width="160" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTemplateColumn Header="Envio" IsReadOnly="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <userControls:QueryableComboBox x:Name="ShipmentStateComboBox" ItemsSource="{Binding DataContext.ShipmentStateList, RelativeSource={RelativeSource AncestorType={x:Type local:ViewOrderWindow}}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Total" Binding="{Binding Quantity}" MinWidth="30" Width="80" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTemplateColumn Header="Recibido" Width="110" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Checked="Received_Checked" 
                                          Unchecked="Received_Unchecked"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Button x:Name="ConfirmBtn" Grid.Row="3" Style="{StaticResource RoundedButtonPrimary}" IsEnabled="False" FontWeight="Bold" Foreground="{StaticResource BackgroundBrush}" Margin="0,10,0,10" MaxWidth="150" MinHeight="40" Click="ConfirmBtn_Click">
            Confirmar recibidos
        </Button>
    </Grid>
</Window>
