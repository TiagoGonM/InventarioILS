<Window x:Class="InventarioILS.View.Windows.ViewOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioILS.View.Windows"
        mc:Ignorable="d"
        Width="1128" Height="700"
        Background="{StaticResource BackgroundBrush}"
        Title="{Binding OrderName, Mode=OneWay, FallbackValue=Pedido}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!--barra superior--> 
            <RowDefinition Height="Auto"/>   <!--descripción--> 
            <RowDefinition Height="*"/>      <!--datagrid--> 
            <RowDefinition Height="Auto"/>   <!--botón confirmar--> 
        </Grid.RowDefinitions>

        <!-- Barra superior con línea turquesa -->
        <Grid HorizontalAlignment="Stretch" Margin="10, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding OrderName, Mode=OneWay, FallbackValue=Pedido #N}" Foreground="#E6E6E6" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="{Binding OrderCreationDate, StringFormat=dd/MM/yyyy, FallbackValue=--/--/----}" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0"/>
        </Grid>

        <!-- Descripción -->
        <Grid Grid.Row="1" Margin="16,0,16,12" Background="{StaticResource SecondaryBrush}">
            <StackPanel Margin="5" Grid.Row="1">
                <TextBlock Text="Descripción" Margin="0,0,0,4" Foreground="{StaticResource AccentForegroundBrush}"/>
                <TextBlock Text="{Binding OrderDescription, Mode=OneWay, FallbackValue=test}" Foreground="{StaticResource ForegroundBrush}"/>
                <!--<TextBox x:Name="DescriptionInput" Text="{Binding OrderDescription, Mode=OneWay}" Margin="0,4,0,8" MinHeight="28" Style="{StaticResource RoundedInput}" TextWrapping="Wrap" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>-->
            </StackPanel>
            
        </Grid>

        <!-- DataGrid dentro de borde turquesa -->
        <Border Grid.Row="2" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" CornerRadius="5" Margin="16,0">
            <DataGrid x:Name="ItemView" CanUserAddRows="False" CanUserDeleteRows="False" RowBackground="{StaticResource RowBackgroundBrush}" MinHeight="450"
                      AlternatingRowBackground="{StaticResource AlternatingRowBackgroundBrush}" BorderBrush="Transparent" BorderThickness="1" GridLinesVisibility="None" Margin="0,0,0,0" ColumnHeaderHeight="40" 
                      RowHeight="40" FontSize="16" HorizontalAlignment="Center" HeadersVisibility="Column" AutoGenerateColumns="False" Background="{DynamicResource BackgroundBrush}"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}" RowStyle="{StaticResource DataGridRowStyle}" ItemsSource="{Binding Items}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código" Binding="{Binding ProductCode}" FontWeight="Bold" Width="80" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" Width="*" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Class}" Width="120" IsReadOnly="True" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Envio" Binding="{Binding ShipmentState}" Width="120" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Quantity}" Width="70" Foreground="{StaticResource ForegroundBrush}"/>
                    <DataGridCheckBoxColumn Header="Recibido" Binding="{Binding IsReceived, Mode=TwoWay}" Width="90"/>
                </DataGrid.Columns>
                </DataGrid>
        </Border>

        <!-- Botón confirmar centrado -->
        <Button x:Name="ConfirmBtn" Grid.Row="3" Style="{StaticResource RoundedButtonPrimary}" IsEnabled="False" FontWeight="Bold" Foreground="{StaticResource BackgroundBrush}" Margin="0,10,0,10" MaxWidth="150" MinHeight="40">
            Confirmar recibidos
        </Button>
    </Grid>
</Window>
