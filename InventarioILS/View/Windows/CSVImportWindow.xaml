<Window x:Class="InventarioILS.View.Windows.CSVImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioILS.View.Windows"
        mc:Ignorable="d"
        Title="Importación de datos" Background="{StaticResource BackgroundBrush}" Height="880" MinHeight="850" Width="1040">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Vista previa de datos importados desde CSV"
                   Grid.Row="0"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="{StaticResource ForegroundBrush}"
                   Padding="5"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"/>
        <!--<DataGrid x:Name="DataGridCSV"
          Grid.Row="1"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserSortColumns="True"
          RowBackground="{StaticResource RowBackgroundBrush}"
          MinHeight="450"
          AlternatingRowBackground="{StaticResource AlternatingRowBackgroundBrush}"
          BorderBrush="{StaticResource SecondaryBrush}"
          CanUserResizeColumns="True"
          GridLinesVisibility="None"
          ColumnHeaderHeight="40"
          RowHeight="40"
          FontSize="16"
          HorizontalAlignment="Stretch"
          HeadersVisibility="Column"
          Background="{DynamicResource BackgroundBrush}"
          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
          CellStyle="{StaticResource DataGridCellStyle}"
          RowStyle="{StaticResource DataGridRowStyle}"
          ItemsSource="{Binding Items}"/>-->

        <ContentControl x:Name="WizardControl" Grid.Row="1"/>

        <!--<StackPanel Grid.Row="2">
            <TextBlock x:Name="FoundCategories" Text="{Binding Categories, StringFormat=Categorias: {0}}" Foreground="{StaticResource ForegroundBrush}" />
            <TextBlock x:Name="FoundSubcategories" Text="{Binding Subcategories, StringFormat=Subcategorias: {0}}" Foreground="{StaticResource ForegroundBrush}" />
            <TextBlock x:Name="FoundClasses" Text="{Binding Classes, StringFormat=Tipos/clases: {0}}" Foreground="{StaticResource ForegroundBrush}" />
            <TextBlock x:Name="FoundStates" Text="{Binding States, StringFormat=Estados: {0}}" Foreground="{StaticResource ForegroundBrush}" />
        </StackPanel>-->

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="PreviousPageBtn" Grid.Row="1" Style="{StaticResource RoundedButtonSecondary}" Width="50" Height="50" HorizontalAlignment="Left"
            Click="PreviousPageBtn_Click" IsEnabled="False">
                <TextBlock Text="←" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,0,5"/>
            </Button>

            <Button x:Name="SubmitBtn" IsEnabled="False" Style="{StaticResource RoundedButtonPrimary}" Width="150" Height="50" Margin="5" Background="{StaticResource AccentBrush}"
            Foreground="{StaticResource SecondaryBrush}" FontWeight="Bold" Click="SubmitBtn_Click">Importar</Button>

            <Button x:Name="NextPageBtn" Grid.Row="3" Style="{StaticResource RoundedButtonSecondary}" Width="50" Height="50" HorizontalAlignment="Right"
            Click="NextPageBtn_Click">
                <TextBlock Text="→" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,0,5"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
