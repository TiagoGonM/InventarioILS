<Window x:Class="InventarioILS.View.Windows.NewCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioILS.View.Windows"
        xmlns:kit="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Background="{StaticResource BackgroundBrush}"
        Title="Nueva categoría" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="10,0,20,0">
                <TextBlock Text="Nombre de la categoría" Foreground="{StaticResource AccentForegroundBrush}"/>
                <TextBox x:Name="CategoryNameInput" Margin="0,4,0,0" MinWidth="200" MinHeight="28" Style="{StaticResource RoundedInput}" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource AccentBrush}" Foreground="{StaticResource ForegroundBrush}" TextChanged="CategoryNameInput_TextChanged"/>
                <TextBlock x:Name="CategoryNameErrorText" Foreground="PaleVioletRed" FontSize="12" Visibility="Collapsed">El nombre de la categoría ya existe.</TextBlock>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Abreviatura" Foreground="{StaticResource AccentForegroundBrush}"/>
                <TextBox x:Name="CategoryShorthandInput" CharacterCasing="Upper" Margin="0,4,0,8"  MinWidth="100" MinHeight="28" Style="{StaticResource RoundedInput}" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource AccentBrush}" Foreground="{StaticResource ForegroundBrush}" TextChanged="CategoryShorthandInput_TextChanged"/>
                <TextBlock x:Name="CategoryShorthandErrorText" Foreground="PaleVioletRed" FontSize="12" Visibility="Collapsed">La abreviatura ya existe.</TextBlock>
            </StackPanel>
        </StackPanel>

        <ListBox 
            x:Name="SubcategoryListBox"
            Grid.Row="1"
            Grid.IsSharedSizeScope="True"
            SelectionMode="Extended"
            Padding="2"
            MinWidth="350"
            HorizontalAlignment="Center"
            MaxHeight="150"
            MinHeight="150"
            ItemsSource="{Binding SubcategoryList}"
            Background="{StaticResource SecondaryBrush}"
            Foreground="{StaticResource ForegroundBrush}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" SharedSizeGroup="NameColumn"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="ShorthandColumn"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Name}" Margin="0,0,10,0" Grid.Column="0"/>
                        <TextBlock Text="{Binding Shorthand}" Grid.Column="2" Foreground="{StaticResource AccentForegroundBrush}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button x:Name="CreateCategoryBtn" Content="Crear" FontWeight="Bold" IsEnabled="False" Width="150" Height="35" HorizontalAlignment="Center" VerticalAlignment="Bottom"  Style="{StaticResource RoundedButtonPrimary}" Foreground="{StaticResource BackgroundBrush}" Click="CreateCategoryBtn_Click"/>
    </Grid>
</Window>
